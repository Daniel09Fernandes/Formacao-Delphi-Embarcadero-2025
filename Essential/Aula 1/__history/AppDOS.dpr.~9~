program AppDOS;

{$APPTYPE CONSOLE}
{$R *.res}

uses
  System.SysUtils,
  uProcedural in 'uProcedural.pas';

var
  lValorReal: string;
  lVlReal: Currency;
  lConseguiuConverter: Boolean;

begin
  try
    while True do
    begin
      Writeln('Informe o valor em real:');
      Readln(lValorReal);

      try
        lVlReal := StrToFloat(lValorReal);
        lConseguiuConverter := True;
      except
        lConseguiuConverter := False;
      end;

      if lConseguiuConverter then
      begin
        lVlReal := lVlReal / 5.69;
        Writeln('O Valor em dolar é: ' + FloatToStr(lVlReal));
      end
      else
        raise Exception.Create('Erro na conversão!');
    end;

  except
    on E: Exception do
      Writeln(E.ClassName, ': ', E.Message);
  end;

end.
